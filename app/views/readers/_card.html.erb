<div class="card mb-3">
  <h2 class="card-header h4">
    Reader #<%= reader.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Reader name</dt>
      <dd><%= reader.reader_name %></dd>

      <dt>Email</dt>
      <dd><%= reader.email %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back reader, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_reader_url(reader), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to reader, method: :delete, data: { confirm: "Do you really want to delete this reader?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(reader.updated_at) %> ago
  </div>
</div>
