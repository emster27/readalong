<%= form_with(model: @bookmark, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :page_id %>

    <%= f.collection_select :page_id, Page.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :recommendations %>
    <%= f.text_area :recommendations, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :reader_id, value: @reader.id %>

  <%= f.submit "Create bookmark", class: "btn btn-block btn-outline-secondary" %>
<% end %>
