<!-- Form bookmark start -->
<%= form_with(model: @bookmark, local: true) do |f| %>
<!-- Form bookmark end -->

  <!-- Label and input for page_id start -->
  <!-- Input for page_id start -->
  <%= f.hidden_field :page_id, value: @page.id %>
  <!-- Input for page_id end -->
  <!-- Label and input for page_id end -->

  <!-- Label and input for recommendations start -->
  <div class="form-group">
    <%= f.label :recommendations %>
    <!-- Input for recommendations start -->
    <%= f.text_area :recommendations, rows: "3", class: "form-control" %>
    <!-- Input for recommendations end -->
  </div>
  <!-- Label and input for recommendations end -->

  <!-- Label and input for reader_id start -->
  <div class="form-group">
    <%= f.label :reader_id %>

    <!-- Input for reader_id start -->
    <%= f.collection_select :reader_id, Reader.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for reader_id end -->
  </div>
  <!-- Label and input for reader_id end -->

  <%= f.submit "Create bookmark", class: "btn btn-block btn-outline-secondary" %>
<% end %>
