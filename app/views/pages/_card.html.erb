<div class="card mb-3">
  <h2 class="card-header h4">
    Page #<%= page.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @page.image, class: "img-fluid" %>
      </dd>

      <dt>Writer name</dt>
      <dd><%= page.writer_name %></dd>

      <dt>Content</dt>
      <dd><%= page.content %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back page, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_page_url(page), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to page, method: :delete, data: { confirm: "Do you really want to delete this page?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(page.updated_at) %> ago
  </div>
</div>
