<% was_validated = page.errors.any? %>

<%= form_with(model: page, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for image start -->
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = page.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
    <% if image_was_invalid %>
      <% page.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for image end -->
  <!-- Label and input for writer_name start -->
  <div class="form-group">
    <% writer_name_class = "form-control" %>
    <% writer_name_was_invalid = page.errors.include?(:writer_name) %>

    <% if was_validated %>
      <% if writer_name_was_invalid %>
        <% writer_name_class << " is-invalid" %>
      <% else %>
        <% writer_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :writer_name %>
    <!-- Input for writer_name start -->
    <%= f.text_area :writer_name, class: writer_name_class, placeholder: "Enter writer name" %>
    <!-- Input for writer_name end -->
    <% if writer_name_was_invalid %>
      <% page.errors.full_messages_for(:writer_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for writer_name end -->
  <!-- Label and input for content start -->
  <div class="form-group">
    <% content_class = "form-control" %>
    <% content_was_invalid = page.errors.include?(:content) %>

    <% if was_validated %>
      <% if content_was_invalid %>
        <% content_class << " is-invalid" %>
      <% else %>
        <% content_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :content %>
    <!-- Input for content start -->
    <%= f.text_area :content, class: content_class, placeholder: "Enter content" %>
    <!-- Input for content end -->
    <% if content_was_invalid %>
      <% page.errors.full_messages_for(:content).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for content end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
