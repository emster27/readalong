<% was_validated = login.errors.any? %>

<%= form_with(model: login, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% useremail_class = "form-control" %>
    <% useremail_was_invalid = login.errors.include?(:useremail) %>

    <% if was_validated %>
      <% if useremail_was_invalid %>
        <% useremail_class << " is-invalid" %>
      <% else %>
        <% useremail_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :useremail %>
    <%= f.text_field :useremail, class: useremail_class, placeholder: "Enter useremail" %>
    <% if useremail_was_invalid %>
      <% login.errors.full_messages_for(:useremail).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% usertype_class = "form-check-input" %>
    <% usertype_was_invalid = login.errors.include?(:usertype) %>

    <% if was_validated %>
      <% if usertype_was_invalid %>
        <% usertype_class << " is-invalid" %>
      <% else %>
        <% usertype_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :usertype, class: "form-check-label" do %>
      <%= f.check_box :usertype, class: usertype_class %> Usertype
    <% end %>
    <% if usertype_was_invalid %>
      <% login.errors.full_messages_for(:usertype).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% password_class = "form-control" %>
    <% password_was_invalid = login.errors.include?(:password) %>

    <% if was_validated %>
      <% if password_was_invalid %>
        <% password_class << " is-invalid" %>
      <% else %>
        <% password_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :password %>
    <%= f.text_field :password, class: password_class, placeholder: "Enter password" %>
    <% if password_was_invalid %>
      <% login.errors.full_messages_for(:password).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% reader_class = "form-control" %>
    <% reader_was_invalid = login.errors.include?(:reader) %>

    <% if was_validated %>
      <% if reader_was_invalid %>
        <% reader_class << " is-invalid" %>
      <% else %>
        <% reader_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :reader_id %>
    <%= f.number_field :reader_id, class: reader_class, placeholder: "Enter reader" %>
    <% if reader_was_invalid %>
      <% login.errors.full_messages_for(:reader).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
