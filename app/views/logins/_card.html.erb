<div class="card mb-3">
  <h2 class="card-header h4">
    Login #<%= login.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Useremail</dt>
      <dd><%= login.useremail %></dd>

      <dt>Usertype</dt>
      <dd><%= login.usertype %></dd>

      <dt>Password</dt>
      <dd><%= login.password %></dd>

      <dt>Reader</dt>
      <dd><%= login.reader_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back login, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_login_url(login), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to login, method: :delete, data: { confirm: "Do you really want to delete this login?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(login.updated_at) %> ago
  </div>
</div>
